{
  "experiment_name": "SimpleTransformer_no_unknown",
  "seed": 2,
  "data_path": "./data/image_dataset_no_unknown",
  "model": "SimpleTransformer",
  "model_params": {
    "num_classes": 10,
    "n_head": 4,
    "d_model": 128,
    "d_ff": 512,
    "num_layers": 6,
    "dropout": 0.1
  },
  "optimizer": "AdamW",
  "optimizer_params": {
    "lr": 0.003,
    "weight_decay": 0.01
  },
  "epochs": 80,
  "warmup_epochs": 5,
  "batch_size": 512,
  "checkpoint_folder": "./checkpoints/SimpleTransformer_no_unknown",
  "scheduler": "SequentialLR",
  "scheduler_params": {
    "schedulers": {
      "LinearLR": {
        "start_factor": 0.5,
        "end_factor": 1,
        "total_iters": 10
      },
      "ExponentialLR": {
        "gamma": 0.9
      }
    },
    "milestones": [
      10
    ]
  },
  "early_stopping": {
    "patience": 10,
    "min_delta": 0.001
  }
}